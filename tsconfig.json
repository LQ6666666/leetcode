{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "types": ["node", "jest"],
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
